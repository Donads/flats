<section>
  <h2>Lista de Imóveis:</h2>
  <% if @properties.empty? %>
    <div><span>Você ainda não cadastrou nenhum imóvel</span></div>
    <p><%= link_to 'Cadastre seu primeiro imóvel agora', new_property_path %></p>
  <% end %>

  <% @properties.each do |property| %>
    <dl>
      <dt><%= link_to property.title, property_path(property) %></dt>
      <dd><%= property.description %></dd>
      <dd>Quartos: <%= property.rooms %></dd>
    </dl>
  <% end %>
</section>
