<% if @property_type.errors.any? %>
  <ul>
    <% @property_type.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<div>
  <%= form_with model: @property_type do |f| %>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>
    <p><%= f.submit %></p>
  <% end %>
</div>

<div>
  <p><%= link_to t('links.go_back'), property_types_path %></p>
</div>
